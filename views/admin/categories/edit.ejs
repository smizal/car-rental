<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <script defer src="/js/bootstrap.bundle.js"></script>
    <title><%= siteInfo.siteName %> | Add Category</title>
  </head>
  <body>
    <%- userInfo.role==='admin'? include('../../partials/backend_navbar.ejs'):
    include('../../partials/super_navbar.ejs') %>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-4 bg-body-secondary p-3 rounded">
          <form
            action="/admin/categories/<%= category._id %>?_method=PUT"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="h1 mb-4">Add New Category</div>
            <div class="mb-3">
              <label for="photo" class="form-label">Category Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Category Name"
                value="<%= category.name %>"
                required
              />
            </div>

            <div class="mb-3">
              <label for="photo" class="form-label">Description</label>
              <textarea
                class="form-control"
                name="description"
                id="description"
                required
              >
<%= category.description %></textarea
              >
            </div>

            <div class="mb-3">
              <label for="photo" class="form-label">Category Photo</label>
              <input class="form-control" type="file" id="photo" name="photo" />
            </div>

            <div class="row mt-5 justify-content-around">
              <button class="col-4 btn btn-primary" type="submit">
                Edit Category
              </button>
              <button class="col-4 btn btn-secondary" type="reset">
                reset
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
