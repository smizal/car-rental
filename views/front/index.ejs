    <div class="container text-center">
      <div class="mt-5 row text-black">
        <h1>Latest Car Listings</h1>
      </div>
      <div class="row align-items-start align-items-center">
        <% allCars.forEach((car) =>{ %>
        <div class="col">
          <div class="card" style="width: 18rem">
            <img
              style="max-height: 150px"
              src="/uploads/cars/<%= car.photo %>"
              class="card-img-top img-fluid"
              alt="<%= car.name %> car photo"
            />
            <div class="card-body">
              <h5 class="card-title"><%= car.name %></h5>
              <p class="card-text"><%= car.description %></p>
              <div class="card mb-2">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Color: <%= car.color %></li>
                  <li class="list-group-item">Model: <%= car.model %></li>
                  <li class="list-group-item">
                    No. of Seats: <%= car.seats %>
                  </li>
                  <li class="list-group-item">price/day: <%= car.price %></li>
                </ul>
              </div>
              <a href="/request/<%=car._id%>" class="btn btn-primary"
                >Request</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <a href="/cars" class="mt-5 btn btn-primary">Show all cars</a>
    </div>
